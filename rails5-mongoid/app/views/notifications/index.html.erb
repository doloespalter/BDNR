<p id="notice"><%= notice %></p>

<h1>Notifications</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Targets</th>
      <th>Sound</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notifications.each do |notification| %>
      <tr>
        <td><%= notification.title %></td>
        <td><%= notification.body %></td>
        <td><%= notification.targets %></td>
        <td><%= notification.sound %></td>
        <td><%= notification.date %></td>
        <td><%= link_to 'Show', notification %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>Cantidad de notificaciones enviadas: <%= @length %></h1>


<br>

<%= link_to 'New Notification', new_notification_path %>
